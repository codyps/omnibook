#!/bin/sh
set -e

#DEBHELPER#

CVERSION=`dpkg-query -W -f='${Version}' omnibook-dkms | awk -F "-" '{print $1}' | cut -d\: -f2`

case "$1" in
    remove|upgrade)
        echo "Removing all DKMS Modules"
        dkms remove -m omnibook -v $CVERSION --all > /dev/null
        echo "Done."
        ;;
esac
